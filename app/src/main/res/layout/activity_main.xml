        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="#f7a22e"
            android:scaleType="center"
            android:text="@string/hello_world" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
